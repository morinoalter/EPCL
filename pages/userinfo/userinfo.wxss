/* pages/userinfo/userinfo.wxss */
.title{
  width: 100%;
  height: 300rpx;
  display: flex;
  background-color: #409eff;
  justify-content: center;
}


.tothepage{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 8px;
  height: 90rpx;
  border-radius: 4px;
  background-color: white;
  box-shadow: 1px 2px 3px rgb(172, 172, 172);
  animation: upp 2s cubic-bezier(0.19, 1, 0.22, 1)  forwards;

}
.word{
  margin-left: 10px;
  color: #353535;
}
.ico{
width:55rpx;
height: 55rpx;
margin-right: 15rpx;

}
@keyframes show{
  0%{opacity: 0;}
  100%{opacity: 1;}
}

@keyframes upp{
  0% {opacity: 0;transform: translate3d(0,100vh,0);}
  50% {opacity: 1;}
  100% {opacity: 1;transform: translate3d(0,0,0);}
}



.myimg{
 
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 50rpx;
  margin-left: 65rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
  animation:show 2.5s cubic-bezier(0.19, 1, 0.22, 1)  ;
}


.myinfo{
  display: flex;
  width: 460rpx;
  flex-direction: column;
  justify-content: center;
  animation:show 2.5s cubic-bezier(0.19, 1, 0.22, 1)  ;
}
.infoword{
  color: white;
  font-size: 17px;
  margin: 10px;
  margin-top: 5px;
  margin-left: 10px;
}