/* pages/mainpage/mainpage.wxss */
page{
  background-color: #f4f4f4;
  height: 100vh;
}

.mission{
  width: 100%;
  height: 300rpx;
  animation:down 3s cubic-bezier(0.19, 1, 0.22, 1)  forwards;
}

@keyframes down{
  0% {opacity: 0;transform: translate3d(0,-300rpx,0);}
  50% {opacity: 1;}
  100% {opacity: 1;transform: translate3d(0,0,0);}
}

@keyframes upp{
  0% {opacity: 0;transform: translate3d(0,100vh,0);}
  50% {opacity: 1;}
  100% {opacity: 1;transform: translate3d(0,0,0);}
}


