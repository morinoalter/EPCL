.til{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pic1{
    height: 100px;
    animation: uppp 3s ease-in-out;
}

.pic2{
   height: 60px;
   opacity: 0;
   animation: show 2s cubic-bezier(0.19, 1, 0.22, 1) 3s forwards;
}

@keyframes show{
   0%{opacity: 0;}
   100%{opacity: 1;}
  }

@keyframes uppp{
   0%{opacity: 0;transform: translate3d(0,30vh,0);}
   50%{opacity: 1;transform: translate3d(0,30vh,0);}
   100%{opacity: 1;transform: translate3d(0,0,0);}
}

.contain{
  transform: translate3d(0,100vh,0);opacity: 0;
  animation: upp 3s cubic-bezier(0.19, 1, 0.22, 1) 3s forwards;
}

@keyframes upp{
  0% {opacity: 0;transform: translate3d(0,100vh,0);}
  50% {opacity: 1;}
  100% {opacity: 1;transform: translate3d(0,0,0);}
}

