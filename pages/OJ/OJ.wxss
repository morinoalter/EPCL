
.top{

  height: 80rpx;
  width: 100%;
  margin-top: 0;

  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
  color: #666;
  border-bottom: 1px solid rgb(199, 199, 199);
  box-sizing: border-box;
}
.tab{
  padding: 15rpx;
  box-sizing: border-box;
}
.tab.active{
  border-bottom: 5rpx solid #409eff;
}

.spages{
   width:100%;
   height:calc(100vh - 80rpx);
}

.scroll{
  height: calc(100vh - 80rpx);
  display: flex;
  align-items: center;
}

.listview{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:auto;
  height:100rpx;
  margin: 5px;
  background-color:#EE964B;

  border-radius: 9px; 
}
.listview.notA{
  background: #083D77;
}

/*出现动画*/
.contain{
  animation:riseshow 3s cubic-bezier(0.19, 1, 0.22, 1);
}
@keyframes riseshow{
  0%{opacity: 0;transform: translate3d(0,10vh,0);}
  100%{opacity: 1;transform: translate3d(0,0,0);}
}


/*每日一题部分文字块*/
.wordblock{
  background: white;
  border-radius: 5px;
  /*box-shadow: 1px 2px 3px rgb(172, 172, 172);*/
  margin:10px;

}

.boxx{
  display: flex;
  justify-content: center;
}

.title{
  display: flex;
  justify-content: center;
  font-size: 50px;
  margin:10px;
  font-weight: 900;
}
.subtitle{
 margin: 10px;
 padding: 5px;
 color: #292929;
 border-bottom: 2px solid rgb(141, 141, 141);
}
.words{
 font-size: 30px;
 margin:10px;
 padding-bottom: 10px;
}
.tapcode{
  padding: 10px;
  padding-top: 0;
  display: flex;
  justify-content: center;
  font-size: 20px;
  color: gray;
}
.codes{
  padding: 10px;
  padding-top: 0;
  color: gray;
  font-size: 20px;
}

.nosubmit{
  display: flex;
  justify-content: center;
  padding: 10px;
  padding-top: 0;
  color: gray;
  font-size: 20px;
}

.queid{
  display: flex;
  align-items: center;
  padding: 10px;
  margin: 10px;
  height: 30rpx;
  background: white;
  color: #F95738;
  border-radius: 15px;
}
.queid.notA{
  color:#083D77;
}

.list-item-icon{
  flex: 0 0 60rpx;
  height: 60rpx;
  width: 60rpx;

  padding-right: 25rpx;
}

.list-item-title{
  color: white;
  font-size: 16pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
}

.nopassicon{
  display:flex;
  justify-content: center;
  align-items: center;
  height: 30rpx;
  width: 30rpx;
  background: #c60151;
  color: white;
  font-weight: 900;
  border-radius: 50%;
  box-shadow: 1px 2px 3px rgb(36, 36, 36);
}

.bord{
  width: 100rpx;
  display: flex;
  justify-content: center;

}

.noque{
  margin-top: 10vh;
  display: flex;
  justify-content: center;
  color:rgb(141, 139, 139);
  animation:show 4s cubic-bezier(0.19, 1, 0.22, 1) ;
}

@keyframes show{
  0%{opacity: 0;}
  100%{opacity: 1;}
}

.rankview{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  width: 90%;
   background: #93C0C1;
   color: white;
   border-radius: 12px;
   box-shadow: 1px 2px 3px rgb(172, 172, 172);
   padding: 0 30rpx;
   margin-bottom: 10rpx;
   margin-top: 10rpx;

  }

.rankview.fir{
  background: #CC333F;
}
.rankview.sec{
  background: #14253D;
}
.rankview.thir{
  background: #101113;
}

.rank{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border:2px solid white;
  display: flex;
 justify-content: center;
}